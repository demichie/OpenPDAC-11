isoSurfaces
{
    type            surfaces;
    libs            ("libsampling.so");
    writeControl    writeTime;

    surfaceFormat   vtk;
    writeFormat     binary;
    fields          (alpha.particles);

    interpolationScheme cellPoint;

    surfaces
    (
        iso6
        {
            type            isoSurface;
            isoField        alpha.particles;
            isoValue        0.000001;
            interpolate     true;
        }
        iso4
        {
            type            isoSurface;
            isoField        alpha.particles;
            isoValue        0.0001;
            interpolate     true;
        }
    );

}


