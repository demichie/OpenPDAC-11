cutPlane
{
    type            surfaces;
    libs            ("libsampling.so");
    writeControl    writeTime;

    surfaceFormat   vtk;
    fields          (p U rho);

    interpolationScheme cellPoint;

    surfaces
    (
        triSurfaceSampling
        {
            // Sampling on triSurface
            type        triSurfaceMesh;
            surface     surface_sample.stl;
            source      boundaryFaces;  // sample cells or boundaryFaces
            interpolate true;
        }
    );

}


