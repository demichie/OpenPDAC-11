FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      ph_rgh;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    terrain
    {
        type            fixedFluxPressure;
        value           $internalField;
        //type            zeroGradient;
    }
    atm
    {
        type            fixedFluxPressure;
        value           $internalField;
        //type            zeroGradient;
    }
    top 
    {
        type            fixedValue;
        value           $internalField;
    }
    crater
    {
        type            zeroGradient;
    }
}


